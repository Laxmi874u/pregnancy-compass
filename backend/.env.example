# PregAI Backend Environment Variables
# Copy this file to .env and fill in your values

# Flask Configuration
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=jwt-secret-key-change-in-production

# Database Configuration
# SQLite (default - for development)
DATABASE_URL=sqlite:///pregai.db

# MySQL (uncomment for production)
# DATABASE_URL=mysql+pymysql://username:password@localhost/pregai_db

# PostgreSQL (alternative)
# DATABASE_URL=postgresql://username:password@localhost/pregai_db

# Environment
FLASK_ENV=development
FLASK_DEBUG=1
